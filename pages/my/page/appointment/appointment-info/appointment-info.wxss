/* pages/my/page/appointment/appointment-info/appointment-info.wxss */

page {
  background-color: #eee;
}

.container {
  background-color: #fff;
  padding-top: 50rpx;
}

.list {
  display: flex;
  width: 100%;
  flex-flow: column nowrap;
  font-size: 32rpx;
  line-height: 70rpx;
}

.list>view {
  height: 70rpx;
  display: flex;
  padding: 8rpx 20rpx;
  position: relative;
  margin: 7rpx 0;
  width:100%;
  box-sizing: border-box;
  margin-top: 20rpx;
}
.list>view>text:first-child{
  width: 30%;
}
.list>view>view:nth-child(2){
  width: 70%;
  display: flex;
  justify-content: space-between;
}
.list .selecter{
  width: 100%;
}
input,picker{
  height: 70rpx;
}
picker{
  width: 45%;
}
input{
  width: 100%;
}
picker ,input{
  border:  solid 1rpx #bbb;
  padding-left: 20rpx;
  color: #666;
}
.msg{
  position:absolute;
  right:21rpx;
  font-size:19rpx;
  top:9rpx;
  border:solid 1rpx red;
  border-radius:5rpx;
  color:red;
}

.btns {
  width: 100%;
  height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 38rpx;
}

.btns>button {
  height: 60rpx;
  width: 240rpx;
  line-height: 56rpx;
  border-radius: 3rpx;
  text-align: center;
  font-size: 31rpx;
}
.sub {
  margin-right: 100rpx;
  background-color: #49c8d5;
  color: #fff;
}