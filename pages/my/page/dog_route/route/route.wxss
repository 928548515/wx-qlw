/* pages/my/page/dog_route/route/route.wxss */

.map_box{
  position:absolute;
  top: 0px;
  bottom: 0px;
  left: 0px;
  right: 0px;
}

.search {
  height: 80rpx;
  display: flex;
  align-items: center;
  background-color: #F0F0F0;
  justify-content: flex-start;
  padding: 0 10rpx;
}

.searchInput {
  border: 1rpx solid #ccc;
  width: 345rpx;
  border-radius: 10rpx;
}
picker{
  padding-left: 10rpx;
}
#navi_map{
  width: 100%;
  height: 100%;
  border: 1rpx solid #D4D4D4; 
}

.textarea-placeholder{
  font-size: 14px;
  margin-top: 10rpx;
}

.choose_input{
  width: 55%;
  height: 50rpx;
  background-color: white;
  border: 2rpx solid #ccc;
  border-radius: 10rpx;
  margin-left: 40rpx;
  margin-top: 25rpx;
 
}

.choose_input_data{
  width: 64rpx;
  height: 64rpx;
}

.choose_button{
  width: 158rpx;
  height: 56rpx;
  font-size: 14px;
  border-radius: 10rpx;
  text-align: center;
  line-height: 56rpx;
  background-color: #41C7D6;
  margin-left: 38rpx;
}
.choose_button:active{
  background-color: #00E5EE;
}

.active_box{
  border: 2rpx solid #41C7D6;
  background-color: #FFFFFF;
  font-size: 14px;
  width: 340rpx;
  position: fixed;
  top: 100rpx;
  height: 146rpx;
}

.active_icon{
  height: 64rpx;
  width: 64rpx;
  position: relative;
  left: 10rpx;
  top: 10rpx;
}

.active_distance {
  display: flex;
  position: absolute;
  left: 80rpx;
  top: 40rpx;
}

.activity_time {
  display: flex;
  position: absolute;
  left: 80rpx;
  top: 80rpx;
}
.statai{
  display: none;
  font-size: 25rpx;
  float: right;
  border: solid 1rpx #49C8D5;
  padding: 0 10rpx;
  width: 215rpx;
}