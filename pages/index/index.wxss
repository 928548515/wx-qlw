/**index.wxss**/
@import "./wxss/serviceSite.wxss";
@import "./wxss/forbid.wxss";
@import './wxss/bizHandle.wxss';
.slider {
  width:100%;
  height: 392rpx;
  overflow: hidden;
}

.slider swiper {
  width: 100%;
  height: 392rpx;
}

.slider image {
  width: 100%;
  height: 392rpx;
}

.Information_tar {
  display: flex;
  flex-wrap: wrap;
  background-color: white;
}

.Information {
  width: 25%;
  height: 120rpx;
  /*1.给当前父元素设置伸缩盒模式*/
  display: flex;
  /*2.设置垂直排列*/
  flex-direction: column;
  /*3.设置交叉轴居中*/
  align-items: center;
  /*4.设置主轴居中*/
  justify-content: center;
  font-size: 14px;
}

.Information image {
  width: 50rpx;
  height: 50rpx;
}

.Information text{
  margin-top: 10rpx;
}

.adopt_tar {
  display: flex;
  /*设置垂直排列*/
  flex-direction: column;
}

.adopt_title {
  height: 100rpx;
  width: 92%;
  margin-left: 35rpx;
  display: flex;
  align-items: center;
  font-size: 14px;
  justify-content: space-between;
}

.adopt_title image {
  width: 260rpx;
  height: 46rpx;
}

.more {
  margin-right: 0px;
}

.adopt_items{
  padding-bottom: 10rpx;
}
.adoptItems {
  display: flex;
  /*设置自动换行*/
  flex-wrap: wrap;
  /* height: 300rpx; */
  border:  solid 1rpx #ddd;
   box-sizing: border-box;
}

.nothas_adopt_items {
  display: none;
}

.adoptItem {
  display: flex;
  /*设置垂直排列*/
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 20%;
  font-size: 23rpx;
  height: 136rpx;
  border: solid 1rpx #FFF;
  box-sizing: border-box;
  background-color: #eee;
}

.adopt_desc {
  width: 130rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}


.adopt_color{
  margin-left: 10rpx;
  color: #aaa;
}

.adoptItem image {
  width: 110rpx;
  height: 100rpx;
}




.foot_tar {
  height: 80rpx;
  background-color: #eee;
  color: #aaa;
  text-align: center;
  line-height: 80rpx;
  font-size: 14px;
}
