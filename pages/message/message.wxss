/*消息页面css */
.message_title {
  width: 100%;
  height: 70rpx;
  background-color: rgb(66,199,219);
  text-align: center;
  line-height: 70rpx;
  color: white;
  font-size: 16px;
}
.selectd{
  width:54rpx;
  height: 100%;
  position: absolute;
  right: 0rpx;
  top:0px;
  border-left: solid 1rpx #ccc;
}
.selectd image{
  height:23rpx;
  width:28rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.selectds>view{
  height: 80rpx;
  background-color: lavender;
  padding: 10rpx ;
  display: flex;
  font-size: 30rpx;
  align-items: center;
  justify-content: space-between;
}

picker{
  border: solid 1rpx #aaa;
  padding-left: 10rpx;
  background-color: #fff;
  color: #777;
  line-height: 50rpx;
  position: relative;
}
.picker_right{
  width: 60%;
}
.picker_left{
 width: 30%;
}

.message_body {
  display: flex;
  /*设置子元素数值排列*/
  flex-direction: column;
}

.message_item {
  height: 170rpx;
  font-size: 14px;
}

.message_item image{
  width: 48rpx;
  height: 48rpx;
  margin-left: 20rpx;
}

.message_item_title {
  display: flex;
   /*设置元素居中显示 */
  align-items: center;
  margin-top: 20rpx;
}

.message_item_name{
  margin-left: 10rpx;
  font-size: 16px;
  width: 400rpx;
}

.message_item_date {
  margin-left: 80rpx;
  color: rgb(153, 153, 153);
}

.message_item_content {
  color: rgb(153, 153, 153);
  margin-top: 35rpx;
  margin-left: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}



