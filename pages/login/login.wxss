/* pages/login/login.wxss */

.login_title {
  height: 400rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.login_title image {
  width: 500rpx;
  height: 132rpx;
}

.login_body {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login_body image {
  height: 65rpx;
  width: 65rpx;
  margin: 0 15rpx;
}

.login_body>view {
  border: solid 1rpx #666;
  display: flex;
  height: 90rpx;
  width: 550rpx;
  align-items: center;
  border-radius: 8rpx;
}

.password {
  margin-top: 20rpx;
}

input {
  height: 100%;
  width: 100%;
  font-size: 33rpx;
}

.submit_button:active {
  background-color: #74f8dc;
}

.submit_button {
  height: 80rpx;
  background-color: #41c7db;
  width: 550rpx;
  border-radius: 8rpx;
  text-align: center;
  line-height: 80rpx;
  color: white;
  margin-top: 75rpx;
}

.toIndex {
  margin-top: 20rpx;
  background-color: rgb(250, 172, 133);
}

.toIndex:active {
  background-color: rgb(250, 150, 188);
}
